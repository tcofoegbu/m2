<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.metafacades</groupId>
        <artifactId>andromda-metafacades</artifactId>
        <version>3.3-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-uml-metafacades</artifactId>
    <packaging>pom</packaging>
    <name>AndroMDA UML Metafacades</name>
  	<description>
  		The core UML metafacade libraries.  Each metafacade library within this
  		project is used to access a UML meta model.  
  		These are generated by the 'meta' cartridge.
  	</description>
    <dependencies>
    	<dependency>
	      	<groupId>org.andromda</groupId>
	      	<artifactId>andromda-core</artifactId>
	      	<version>${pom.version}</version>
	    </dependency> 
    	<dependency> 
    		<groupId>commons-collections</groupId>
      		<artifactId>commons-collections</artifactId>
     		<version>3.1</version>
    	</dependency>
	    <dependency>
	      	<groupId>commons-lang</groupId>
	      	<artifactId>commons-lang</artifactId>
	      	<version>2.3</version>
	    </dependency>	
    	<dependency>
    	    <groupId>org.andromda.translationlibraries</groupId>
    	    <artifactId>andromda-ocl-translation-core</artifactId>
    	    <version>${pom.version}</version>
    	</dependency> 
    </dependencies>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                  <groupId>org.andromda.maven.plugins</groupId>
                  <artifactId>andromda-bootstrap-plugin</artifactId>
                  <version>${pom.version}</version>
                  <executions>
                      <execution>
                          <goals>
                              <goal>run</goal>
                          </goals>
                      </execution>
                  </executions>
                  <configuration>
                      <buildSourceDirectory>${pom.basedir}/target/src</buildSourceDirectory>
                      <lastModifiedCheck>true</lastModifiedCheck>
                  </configuration>
                </plugin>
                <plugin>
                    <groupId>org.andromda.maven.plugins</groupId>
                    <artifactId>andromda-maven-plugin</artifactId>    
                    <version>${pom.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>run</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <buildSourceDirectory>${pom.basedir}/target/src</buildSourceDirectory>
                        <lastModifiedCheck>true</lastModifiedCheck>
                    </configuration>        
                </plugin>
                <plugin>
                    <groupId>org.andromda.maven.plugins</groupId>
                    <artifactId>andromda-bootstrap-install-plugin</artifactId>    
                    <version>${pom.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>install</goal>
                            </goals>
                        </execution>
                    </executions> 
                    <configuration>
                        <installDirectory>${basedir}/../../../lib</installDirectory>
                    </configuration>           
                </plugin>
                <plugin>
                    <extensions>true</extensions>
                    <groupId>org.andromda.maven.plugins</groupId>
                    <artifactId>andromda-model-archiver-plugin</artifactId>
                    <version>${pom.version}</version>
                    <configuration>
                        <modelSourceDirectory>src/uml</modelSourceDirectory>
                        <generateJar>true</generateJar>
                        <buildSourceDirectory>target/src</buildSourceDirectory>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
		<resources>
	      	<resource>
		        <directory>src/java</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	      	</resource>
	      	<resource>
		        <directory>src</directory>
	        	<includes>
	        		<include>META-INF/**/*</include>
	        	</includes>
	      	</resource>
	  		<resource>
				<directory>target/src</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	  		</resource>
    	</resources>
        <testResources>
            <testResource>
                <directory>src/test/java</directory>
                <excludes>
                    <excludes>**/*.java</excludes>
                </excludes>
            </testResource>
            <testResource>
                <directory>src/test/conf</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/test/uml</directory>
                <includes>
                  <include>**/*</include>
                </includes>
            </testResource>
        </testResources>
    </build>
    <modules>
        <module>common</module>
        <module>uml14</module>
        <module>emf/uml2</module>
    </modules>
    <properties>
        <model.file>${pom.basedir}/src/main/uml/${pom.artifactId}.xml.zip</model.file>
        <maven.andromda.model.uri>jar:file:${model.file}!/${pom.artifactId}.xml</maven.andromda.model.uri>
        <maven.build.src>${pom.basedir}/target/src</maven.build.src>
        <maven.src.dir>${pom.basedir}/src/main</maven.src.dir>
    </properties>
</project>